{# @Type   Component #}
{# @For    Post Type #}
{# @Class  timber-posts/Guides.php #}
<article class="c-card c-card-transparent h-full">
  <header class="c-card__header items-center">
    {% if post.icon == '' %}<span>{% endif %}
      {% if post.icon %}
      <svg class="c-card__icon text-blue-d-1 fill-blue-l-1" role="img">
        <title>{{ post.icon.name }}</title>
        <use href="#program-card-{{ post.icon.slug }}"></use>
      </svg>
      {% endif %}

      <a href="{{ post.link }}" class="c-card__header-link">
        <h3 class="c-card__title">
          <span class="c-card__underline">
            {{ post.title }}
          </span>

          {% if post.linkTarget == '_blank' %}
          <svg aria-hidden="true" class="icon-ui rtl:flip">
            <use href="#lucide-external-link"></use>
          </svg>
          {% endif %}
        </h3>
      </a>
    {% if post.icon == '' %}</span>{% endif %}
  </header>

  <div class="c-card__body">
    <div class="c-card__summary">
      {{ post.preview|wpautop }}
    </div>

    <ul class="c-card__features">
      <li>
        <svg class="icon-ui c-card__feature-icon" role="img">
          <title>{{ __('Last Updated', 'WNYC') }}</title>

          <use href="#lucide-info"></use>
        </svg>

        <span>
          {{ __('Updated', 'WNYC') }}
          {{ post.date|date(fn('get_option', 'date_format')) }}
          {{ post.date|date(fn('get_option', 'time_format')) }}
        </span>
      </li>
    </ul>

    <span></span>
  </div>
</article>